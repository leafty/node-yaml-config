{
  "name": "node-yaml-config",
  "description": "Write your configuration files for node.js in yaml",
  "version": "1.0.0-alpha",
  "author": "Johann-Michael Thiebaut <johann.thiebaut@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "directories": {
    "lib": "src",
    "example": "examples"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn run prebuild && tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "yarn run build"
  },
  "dependencies": {
    "js-yaml": "^3.13.1",
    "node.extend": "^2.0.2"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/js-yaml": "^3.12.4",
    "@types/node": "^14.0.4",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^26.0.1",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.3"
  },
  "homepage": "https://github.com/leafty/node-yaml-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/leafty/node-yaml-config.git"
  },
  "bugs": {
    "url": "https://github.com/leafty/node-yaml-config/issues"
  },
  "keywords": [
    "yaml",
    "config"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
